<div class="login-container">
  <div class="login-card">
    <h1 class="login-title">ログイン</h1>

    <%= form_with url: login_path, method: :post, class: "login-form" do |form| %>
      <div class="form-group">
        <%= form.label :email, "メールアドレス", class: "form-label" %>
        <%= form.email_field :email, required: true, autofocus: true, class: "form-input", placeholder: "example@email.com" %>
      </div>

      <div class="form-actions">
        <%= form.submit "ログイン", class: "btn-login" %>
      </div>
    <% end %>
  </div>
</div>
